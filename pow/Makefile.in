LDFLAGS = @LDFLAGS@
LIBS	= @LIBS@
PYTHON	= @PYTHON@
OBJCOPY = @OBJCOPY@

abs_top_srcdir	 = @abs_top_srcdir@
abs_top_builddir = @abs_top_builddir@

all: POW/_POW.so

POW/_POW.so: POW.c
	AC_CFLAGS='${CFLAGS}' AC_LDFLAGS='${LDFLAGS}' AC_LIBS='${LIBS}' AC_OBJCOPY='${OBJCOPY}' ${PYTHON} build.py

# $Id$

NAME = print_manifest


BIN = ${NAME}
SRC = ${NAME}.c
OBJ = ${NAME}.o

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

all: ${BIN}

clean:
	rm -f ${BIN} ${OBJ}

${BIN}: ${SRC}
	${CC} ${CFLAGS} -o $@ ${SRC} ${LDFLAGS} -lcrypto ${LIBS}

MANIFEST_DIR = @top_srcdir@/rpkid/tests/smoketest.dir/publication

test: all
	-date -u +'now:            %Y%m%d%H%M%SZ'
	if test -d ${MANIFEST_DIR}; then find ${MANIFEST_DIR} -type f -name '*.mnf' -print -exec ./${BIN} {} \; ; else :; fi

install:
	@true

distclean: clean
	rm -f Makefile
